<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Squarebean</title>
  <%= stylesheet_link_tag    "application", media: "all" %>
  <%= javascript_include_tag "modernizr" %>
  <%= csrf_meta_tags %>
</head>
<body>

  <% if flash[:notice] %>
    <%= flash[:notice] %>
  <% end %>

  <% if flash[:alert] %>
    <%= flash[:alert] %>
  <% end %>

  <% if flash[:error] %>
    <%= flash[:error] %>
  <% end %>

  <%= yield %>
  <%= javascript_include_tag "application" %>

</body>
</html>
